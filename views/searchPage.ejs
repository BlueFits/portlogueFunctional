</header>


<section>
    <span><%- ((qUsers, qryFor)=>{ 
        if (qUsers.length === 0) {
            return `No results for <strong>${qryFor}</strong>`;
        }
        else {
            return `Results for <strong>${qryFor}</strong>`;
        }
    })(qUsers, qryFor);%></span>

    <div>
        <ul>
            <% for (let val of qUsers) { %>
                <li>
                    <a href="/users/profile/<%= val.username %>">
                        <div><img src="/publicAvatar/<%= val.email %>"></div>
                        <div>
                            <p><%=val.fullNameDisplay%></p>
                            <p><%=val.username%>||<%=val.email%></p>
                            <p><%=val.occupation%></p>
                            <p><%val.country%></p>
                        </div>
                    </a>
                    <div>
                        <a href="/users/send_message/<%= val.username %>">Send message</a>
                        <a href="<%= val.portfolioUrl%>">Visit official website</a>
                        <a href="/users/report/<%=val.username%>">Report</a>
                    </div>
                </li>
                <%}%> 
        </ul>
    </div>
</section>

<div>
    <span>End of results</span>
</div>

