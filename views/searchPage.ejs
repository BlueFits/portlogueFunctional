    <div>
        <div>
            <h1>Search</h1>
            <span>Search PortLogue users by their name, username, or email.</span>
        </div>
        <form method="GET" action="/search">
            <button type="submit"><img src="#" alt="search-icon"/></button>
            <input type="text" name="q"/>
        </form>
